<div class="recommended">
  <div class="card">
    <div class="card-body">
      <h6 class="card-title">推荐文章</h6>
      <ul class="list-unstyled recommended-lisrt">
        {{#each recommended}}
          <li>
            <div class="row">
              <div class="col-4">
                <div class="card-image" style="background-image: url({{this.thumbnail}})"></div>
              </div>
              <div class="col-8">
                <div>
                  <a href="/feed/{{this.id}}">{{this.title}}</a>
                </div>
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
